{% extends "base.html.twig" %}

{% block body %}

    <div class="section container">
        <p class="title">{{ author.username }}</p>

        <div class="level">
            <p class="subtitle">Location</p>
            <p>{{ author.location }}</p>
        </div>

        <div class="level">
            <p class="subtitle">Member since</p>
            <p>{{ author.joinDate | date("d/m/Y") }}</p>
        </div>

        <div class="level">
            <p class="subtitle">Bio</p>
            <p>{{ author.bio }}</p>
        </div>
    </div>

{% endblock %}