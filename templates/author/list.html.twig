{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <h1 class="title">Authors</h1>
    </div>

    <div class="section">

        <div class="container">

            <div class="tile is-ancestor">
                {% for author in authors %}

                    <div class="tile is-parent">
                        <article class="tile is-child box">
                            <p class="title">{{ author.user.username }}</p>
                            <p class="subtitle">{{ author.location }}</p>
                            <p>
                                Member since {{ author.joinDate | date("d/m/Y") }}
                            </p>
                            <p>
                                <a href="/authors/{{ author.id }}">Find out more</a>
                            </p>
                        </article>
                    </div>

                {% endfor %}
            </div>

        </div>

    </div>

{% endblock %}